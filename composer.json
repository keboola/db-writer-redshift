{
    "name": "keboola/db-writer-redshift",
    "license": "MIT",
    "type": "project",
    "description": "Keboola Redshift DB Writer",
    "keywords": ["keboola", "redshift", "aws", "db", "writer"],
    "authors": [
        {
            "name": "Miroslav Čillík",
            "email": "miro@keboola.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "keboola/db-writer-common": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.3",
        "squizlabs/php_codesniffer": "^2.6",
        "codeclimate/php-test-reporter": "^0.3",
        "keboola/storage-api-client": "^8.0",
        "phpstan/phpstan": "^0.7.0"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\": ["src/Keboola", "tests/Keboola"],
            "Keboola\\DbWriter\\Redshift\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "tests": "phpunit",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "phpstan": "phpstan analyse ./src ./tests --level=0 --no-progress",
        "generate-ssh-keys": "source ./vendor/keboola/db-writer-common/tests/generate-ssh-keys.sh",
        "build": [
            "@phpstan",
            "@phpcs",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-publish --no-check-all",
            "@build"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
